{
  "name": "bcr3",
  "private": true,
  "description": "",
  "repository": "https://github.com/magicznyleszek/bcr3.git",
  "author": "Leszek Pietrzak",
  "license": "CC-BY-4.0",
  "bugs": {
    "url": "https://github.com/magicznyleszek/bcr3/issues",
    "email": "leszek@magicznyleszek.xyz"
  },
  "homepage": "https://bcr3.magicznyleszek.xyz",
  "scripts": {
    "start": "npm run build",
    "build": "pretty-quick && npm-run-all build-styles pdf-book",
    "serve": "npm-run-all build jekyll-serve",
    "build-styles": "postcss _includes/main.css -o dist/bcr3.css",
    "pdf-book": "markdown-pdf _includes/text/bcr3.md -o dist/bcr3.pdf -f A4 -r portrait -b 1.5cm -s dist/monolith.css -m '{\"breaks\": false, \"linkify\": false, \"typographer\": true}'",
    "jekyll-build": "jekyll build",
    "jekyll-serve": "jekyll serve --watch --baseurl ''"
  },
  "watch": {
    "styles:build": {
      "patterns": [
        "src"
      ],
      "extensions": "css",
      "quiet": false
    },
    "pdf:build": {
      "patterns": [
        "src"
      ],
      "extensions": "md",
      "quiet": false
    }
  },
  "devDependencies": {
    "autoprefixer": "^7.2.6",
    "cssnano": "^3.10.0",
    "markdown-pdf": "^8.1.1",
    "npm-run-all": "^4.1.3",
    "npm-watch": "^0.3.0",
    "postcss": "^6.0.23",
    "postcss-cli": "^4.1.1",
    "postcss-color-function": "^4.0.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-custom-properties": "^7.0.0",
    "postcss-import": "^11.1.0",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.6.0"
  }
}
